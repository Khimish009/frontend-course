{
  "extends": "stylelint-config-standard-scss",
  "rules": {
    "selector-max-id": 0,
    "unit-allowed-list": ["%", "deg", "px", "rem", "ms", "s", "vh"],
    "selector-class-pattern": null,
    "no-empty-source": null
  },
  "defaultSeverity": "error",
  "ignoreFiles": ["build/**/*", "coverage/**/*"]
}
